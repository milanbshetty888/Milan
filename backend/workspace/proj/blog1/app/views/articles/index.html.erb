<table border=3px>
	<tr>
		<th>Title</th>
		<th>Text</th>
		<th>name</th>
	</tr>
	<% @articles.each do |article| %>
	<tr>
		<td><%= article.title %></td>
		<td><%= article.text %></td>
		<td><%= article.name %></td>
		<td><%= link_to 'Show', article_path(article) %></td>
	</tr>
	<% end %>
</table>

<h1>Hello, Rails!</h1>
<%= link_to 'My Blog', controller: 'articles' %>

